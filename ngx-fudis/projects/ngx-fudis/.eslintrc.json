{
	"extends": "../../.eslintrc.json",
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts"],
			"parserOptions": {
				"project": ["projects/ngx-fudis/tsconfig.lib.json", "projects/ngx-fudis/tsconfig.spec.json"],
				"createDefaultProgram": true
			},
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "fudis",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": ["fudis", "example"],
						"style": "kebab-case"
					}
				]
			}
		},
		{
			"files": ["*.html"],
			"rules": {}
		}
	]
}
